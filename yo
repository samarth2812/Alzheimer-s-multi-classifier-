export const getIndentAuditTrailController = async (
  req: customRequest,
  res: Response,
  next: NextFunction
): Promise<void> => {
  try {
    const user: any = get(req, "user");
    const { userRole, actionType, page = "1", limit = "10" } = req.query;

    const pageNumber = parseInt(page as string, 10);
    const limitNumber = parseInt(limit as string, 10);

    if (
      isNaN(pageNumber) ||
      isNaN(limitNumber) ||
      pageNumber < 1 ||
      limitNumber < 1
    ) {
      throw ApiError.badRequest("Invalid pagination parameters");
    }

    const filters = {
      ...(userRole && typeof userRole === "string" && { userRole }),
      ...(actionType && typeof actionType === "string" && { actionType }),
    };

    const result = await getIndentAuditTrail(user, undefined, pageNumber, limitNumber, filters);

    res.status(200).json(result);
  } catch (error) {
    next(error);
  }
};
