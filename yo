model IndentAuditTrail {
  id          String      @id @default(uuid())
  indentId    String
  field       String      // e.g., "status", "priority", "assignedTo", "attachments", "remarks"
  oldValue    String?     // optional for create actions
  newValue    String?
  action      AuditAction // "CREATE" | "UPDATE" | "DELETE"
  step        Int
  role        StepRoles
  performedBy String      // user email
  timestamp   DateTime    @default(now())
  indent      Indents     @relation(fields: [indentId], references: [indentId])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
}
