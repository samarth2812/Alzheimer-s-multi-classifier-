model IncidentReporting {
  incidentId         String           @id @default(uuid())
  type               IncidentType
  department         Department
  description        String
  status             IncidentStatus
  assignedTo         String
  dueDate            DateTime
  severity           IncidentSeverity
  reportedDate       DateTime
  closedDate         DateTime?
  comments           String
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  lastStepChangeTime DateTime?
  isDeleted          Boolean          @default(false)
  currStep           Int              @default(0)
  prevStep           Int              @default(0)
  openStatus         Boolean          @default(false)
  rejectedStatus     Boolean          @default(false)
  remarkHistory      IncidentRemark[] @relation("IncidentRemark")
  attachments        Attachment[]     @relation("Attachment_incidentId")
}
model ISEObservations {
  observationId      String              @id @default(uuid())
  department         Department
  description        String
  status             ObservationStatus   @default(PENDING)
  priority           observationPriority
  observationTheme   ObservationTheme
  assignedTo         String
  dueDate            DateTime
  closedDate         DateTime?
  comments           String
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  lastStepChangeTime DateTime?
  isDeleted          Boolean             @default(false)
  currStep           Int                 @default(0)
  prevStep           Int                 @default(0)
  openStatus         Boolean             @default(false)
  rejectedStatus     Boolean             @default(false)
  remarkHistory      ObservationRemark[] @relation("ObservationRemark")
  attachments        Attachment[]        @relation("Attachment_observationId")
}
