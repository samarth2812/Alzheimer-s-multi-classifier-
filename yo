

<Button
  startIcon={
    sendingReminderId === item.id ? (
      <CircularProgress size={14} color="inherit" />
    ) : (
      <Mail fontSize="small" />
    )
  }
  size="small"
  onClick={() => handleSendMailToAllAssignees(item, moduleId)}
  sx={animatedButtonStyle}
  disabled={sendingReminderId === item.id}
>
  {sendingReminderId === item.id
    ? "Sending..."
    : "Send Email to All Users"}
</Button>
