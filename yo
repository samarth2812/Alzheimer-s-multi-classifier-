      <DialogTitle sx={{ px: 0, py: 0.5 }}>
        <Box display="flex" alignItems="center" justifyContent="space-between" px={0.5} pt={1.5}>
          <Stack direction="row" alignItems="center">
            <Button onClick={onClose} size="small" variant="text">
              <ArrowBackIosNew />
            </Button>
            <Stack direction="row" alignItems="center" p={0}>
              <Avatar {...stringAvatar(user?.name || "User")} />
              <Stack direction="column" alignItems="center" p={0}>
               <DialogContent>{user.name}</DialogContent>
               <DialogContent>{user.email}</DialogContent>
              </Stack>
            </Stack>
          </Stack>
          <Stack direction="row" spacing={2} alignItems="center">
            <SearchableDropdown
              name="commType"
              options={commTypeLabels}
              value={formData.commType}
              onChange={handleChange}
              placeholder="Comm. Type"
              style={{ minWidth: 300 }}
              size="small"
            />
            <IconButton>
              <MoreVertOutlined />
            </IconButton>
            {initialData?.isReply && (
              <IconButton>
                <ReplayCircleFilledOutlined />
              </IconButton>
            )}
          </Stack>
        </Box>
      </DialogTitle>
