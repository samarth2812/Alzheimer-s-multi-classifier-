   {selectedCommId && (
      <CommunicationAccordion
        communication={data.find((d) => d.commId === selectedCommId)}
        onReply={(comm) => {
          setEditCommData({
            refNo: comm.refNo,
            category: comm.category,
            sentTo: [comm.sentBy],
            subject: `Re: ${comm.subject}`,
          });
          setIsModalOpen(true);
        }}
      />
    )}
