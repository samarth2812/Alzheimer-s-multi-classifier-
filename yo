import React from "react";
import {
  Box,
  Divider,
  List,
  ListItem,
  ListItemButton,
  ListItemIcon,
  ListItemText,
  IconButton,
  Typography,
} from "@mui/material";
import InboxIcon from "@mui/icons-material/MoveToInbox";
import SendIcon from "@mui/icons-material/Send";
import DraftsIcon from "@mui/icons-material/Drafts";
import ChevronLeftIcon from "@mui/icons-material/ChevronLeft";
import MenuIcon from "@mui/icons-material/Menu";

const drawerWidth = 220;

export default function SideDrawer({ open, handleDrawerToggle, selectedTab, onSelectTab }) {
  const items = [
    { text: "Inbox", icon: <InboxIcon />, value: "inbox" },
    { text: "Sent Emails", icon: <SendIcon />, value: "sent" },
    { text: "Drafts", icon: <DraftsIcon />, value: "drafts" },
  ];

  return (
    <Box
      sx={{
        width: open ? drawerWidth : 60,
        transition: "width 0.3s ease",
        borderRight: "1px solid #eee",
        backgroundColor: "#fff",
        height: "100%",
        display: "flex",
        flexDirection: "column",
      }}
    >
      <Box
        sx={{
          display: "flex",
          alignItems: "center",
          justifyContent: open ? "space-between" : "center",
          px: 2,
          py: 1.5,
        }}
      >
        {open && (
          <Typography variant="h6" fontSize={16} fontWeight={600}>
            Mail
          </Typography>
        )}
        <IconButton onClick={handleDrawerToggle} size="small">
          {open ? <ChevronLeftIcon /> : <MenuIcon />}
        </IconButton>
      </Box>

      <Divider />

      <List>
        {items.map((item) => (
          <ListItem key={item.text} disablePadding sx={{ justifyContent: open ? "initial" : "center" }}>
            <ListItemButton
              selected={selectedTab === item.value}
              onClick={() => onSelectTab(item.value)}
              sx={{
                justifyContent: open ? "flex-start" : "center",
                px: 2,
              }}
            >
              <ListItemIcon
                sx={{
                  minWidth: 0,
                  mr: open ? 2 : "auto",
                  justifyContent: "center",
                }}
              >
                {item.icon}
              </ListItemIcon>
              {open && <ListItemText primary={item.text} />}
            </ListItemButton>
          </ListItem>
        ))}
      </List>
    </Box>
  );
}
