const searchTerm = filters.search.trim().toLowerCase();

// this finds matching UI labels like "Consumer Finance - Growth"
const matchedEnumValues = Object.entries(DEPARTMENT_MAPPING)
  .filter(([label]) => label.toLowerCase().includes(searchTerm))
  .map(([, enumValue]) => enumValue);

where.AND.push({
  OR: matchedEnumValues.map((enumVal) => ({ department: enumVal })),
});
