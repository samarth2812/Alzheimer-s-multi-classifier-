      await createIndentAuditTrail({
        indentId: existingAttachment.indentId,
        actionType: "DELETE",
        step: roleStepMap[user.role],
        role: user.role,
        performedByName: user.name,
        performedByEmail: user.email,
        attachmentChanges: {
          deleted: [existingAttachment.fileName],
        },
      });
