    // âœ… Create audit trail if it's for Indent
    if (moduleName === "INDENT") {
      await createIndentAuditTrail({
        indentId: entityId,
        actionType: "CREATE",
        step,
        role: uploadedByRole,
        performedByName: uploadedByName,
        performedByEmail: uploadedBy,
        attachmentChanges: {
          added: [cleanFileName],
        },
      });
    }
