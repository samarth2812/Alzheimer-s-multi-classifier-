export const fetchIndentsList = async (
  role: StepRoles,
  department: string | undefined,
  tab: string,
  user: User
) => {
  try {
    if (!role || !tab) {
      throw new Error("role & tab is required");
    }

    if (role !== user.role) {
      throw new Error("You are not authorized to view indents for this role");
    }
    const where = generateWhereFilter(role, department, tab, user.email);

    return await prisma.indents.findMany({
      where,
      select: {
        indentId: true,
        department: true,
        status: true,
        category: true,
        description: true,
        priority: true,
        assignedTo: true,
        comments: true,
        dueDate: true,
        createdAt: true,
        updatedAt: true,
        currStep: true,
        prevStep: true,
        lastStepChangeTime: true,
        remarkHistory: {
          orderBy: { createdAt: "asc" }, //Chronological
          select: {
            id: true,
            content: true,
            createdAt: true,
            updatedAt: true,
            isEdited: true,
            role: true,
            step: true,
          },
        },
        attachments: {
          where: {
            isDeleted: false,
          },
          orderBy: { uploadedAt: "asc" }, //Chronological
          select: {
            id: true,
            fileName: true,
            uploadedBy: true,
            uploadedByRole: true,
            indentId: true,
            uploadedAt: true,
          },
        },
      },
      orderBy: {
        createdAt: "desc",
      },
    });
  } catch (error) {
    console.error("Error fetching indents:", error);
    throw new Error("Failed to fetch indents");
  }
};


export const getObligationsForUser = async (
  userRole: Position,
  userDepartment: Department,
  page: number = 1,
  pageSize: number = 10
) => {
  try {
    const { filter } = workflowHelper.getObligationsForUser(userRole, userDepartment);
    
    // Additional validation: ensure user can only see obligations for their department
    // (except compliance team who can see all)
    if (userDepartment !== Department.COMPLIANCE) {
      // For non-compliance users, add department filter
      filter.AND.push({
        OR: [
          { department: userDepartment },
          { department: null } // Handle cases where department is not set yet
        ]
      });
    }
    
    const offset = (page - 1) * pageSize;
    
    const [obligations, total] = await Promise.all([
      prisma.obligation.findMany({
        where: filter,
        skip: offset,
        take: pageSize,
        orderBy: { updatedAt: 'desc' }
      }),
      prisma.obligation.count({ where: filter })
    ]);
    
    return {
      success: true,
      data: obligations,
      pagination: {
        total,
        page,
        pageSize,
        totalPages: Math.ceil(total / pageSize)
      }
    };
  } catch (error: any) {
    console.error('Error in getObligationsForUser:', error);
    throw new Error(`Error retrieving obligations: ${error.message}`);
  }
};
