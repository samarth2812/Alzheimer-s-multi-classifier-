<Box
  sx={{
    display: "flex",
    justifyContent: "space-between",
    alignItems: "center",
    mb: 2,
    flexWrap: "wrap",
  }}
>
  {/* Left: Tabs */}
  <Box sx={{ display: "flex", alignItems: "center", gap: 3 }}>
    {["Inbox", "Sent Items"].map((label) => {
      const value = label === "Inbox" ? "inbox" : "sent";
      const isActive = tab === value;
      return (
        <Button
          key={value}
          onClick={() => setTab(value)}
          sx={{
            fontSize: "0.85rem",
            fontWeight: isActive ? 600 : 400,
            color: (theme) =>
              isActive
                ? theme.palette.custom.two
                : theme.palette.custom.text2,
            position: "relative",
            borderRadius: 0,
            textTransform: "none",
            "&::after": {
              content: '""',
              position: "absolute",
              bottom: -2,
              left: 0,
              width: "100%",
              height: "2px",
              backgroundColor: (theme) => theme.palette.custom.two,
              transform: isActive ? "scaleX(1)" : "scaleX(0)",
              transformOrigin: "left",
              transition: "transform 0.3s ease-out",
            },
            "&:hover::after": {
              transform: "scaleX(1)",
            },
          }}
        >
          {label}
        </Button>
      );
    })}
  </Box>

  {/* Right: Search and Add */}
  <Box sx={{ display: "flex", alignItems: "center", gap: 2, mt: { xs: 2, sm: 0 } }}>
    <TextField
      fullWidth
      placeholder="Search Communication..."
      variant="outlined"
      sx={{ minWidth: 250 }}
      value={searchTerm}
      onChange={(e) => setSearchTerm(e.target.value)}
      InputProps={{
        startAdornment: (
          <InputAdornment position="start">
            <Search fontSize="medium" sx={iconButtonStyle} />
          </InputAdornment>
        ),
      }}
    />
    <Button
      size="small"
      startIcon={<AddIcon />}
      onClick={handleAddCommClick}
      sx={animatedButtonStyle}
    >
      Add Communication
    </Button>
  </Box>
</Box>
