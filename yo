type TemplateType = 'rejected' | 'closure' | 'latest';

export const getStepTemplateMetaForIndent = (
  fromStep: number,
  toStep: number,
  rejectedStatus: boolean
): { templateType: TemplateType; actionText: string } => {
  let templateType: TemplateType;

  if (rejectedStatus) {
    templateType = 'rejected';
  } else if (toStep === 4) {
    templateType = 'closure';
  } else {
    templateType = 'latest';
  }

  let actionText = '';

  switch (templateType) {
    case 'rejected':
      actionText = 'Review and update the rejected indent';
      break;

    case 'closure':
      actionText = 'Review for closure approval';
      break;

    case 'latest':
    default:
      if (toStep === 0 || toStep === 1) {
        actionText = 'Review and process the indent';
      } else if (toStep === 2) {
        actionText = 'Complete testing and evidence submission';
      } else if (toStep === 3) {
        actionText = 'Review testing results and approve';
      } else {
        actionText = 'Take necessary action on the indent';
      }
      break;
  }

  return { templateType, actionText };
};
