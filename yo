export const triggerReminderJob = async (type: "2_days" | "1_day" | "same_day"): Promise<any> => {
  try {
    console.log(`Manually triggering ${type} reminder job...`);

    let result;
    switch (type) {
      case "2_days":
        result = await sendRegulatoryTimelineReminders(2);
        break;
      case "1_day":
        result = await sendRegulatoryTimelineReminders(1);
        break;
      case "same_day":
        result = await sendRegulatoryTimelineReminders(0);
        break;
      default:
        throw new Error("Invalid reminder type");
    }

    console.log(`Manual ${type} reminder job completed:`, result);
    return result;
  } catch (error: any) {
    console.error(`Manual ${type} reminder job failed:`, error);
    throw error;
  }
};
