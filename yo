export const generateEmailSubject = (moduleType: "OBLIGATION" | "INDENT" | "INCIDENT" | "OBSERVATION") => {
  switch (moduleType) {
    case "OBLIGATION":
      return "🔔 Reminder: Obligation Action Required";
    case "INDENT":
      return "📦 Reminder: Indent Requires Your Attention";
    case "INCIDENT":
      return "⚠️ Reminder: Incident Needs Review";
    case "OBSERVATION":
      return "📝 Reminder: Observation Follow-up Needed";
    default:
      return "🔔 Reminder: Action Required";
  }
};
