 const formatTableData = (rawData) => {
    if (moduleId === "obligation") {
      return formatObligationTableData(rawData, {
        onViewMore: handleViewMore,
        onSendMail: (assignees, item) =>
          handleSendMail(
            assignees,
            {
              obligationId: item.id,
              obligationTitle: item.title,
            },
            "OBLIGATION",
            item.id,
          ),
          sendingReminderId
      });
    } else if (moduleId === "self-certificate") {
      return formatSelfCertificateTableData(rawData, {
        onViewMore: handleViewMore,
      });
    } else {
      return formatIBATableData(rawData, {
        onViewMore: handleViewMore,
      });
    }
